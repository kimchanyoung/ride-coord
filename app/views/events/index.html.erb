<div class='row'>
  <div class='small-12 small-centered text-center columns'>
    <h1>All Events</h1>
  </div>
</div>
<div class='row'>
  <div class='small-12 small-centered text-center columns'>
    <%= link_to 'Create a New Event', new_event_path %>
  </div>
</div>

<% @events.each do |event| %>
  <li><div class='row event'>
    <div class='small-12 small-centered text-center columns'>
      <%= link_to event.name, event_path(event) %>
    </div>
  </div></li>
<% end %>